<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE log4j:configuration SYSTEM
        "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration>

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="encoding" value="UTF-8"/>
        <param name="target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%5p] [%d{yyyy-MM-dd HH:mm:ss SSS}] (%C:%L) %m%n"/>
        </layout>
    </appender>

    <!--本项目业务日志-->
    <appender name="BIZ" class="org.apache.log4j.RollingFileAppender">
        <param name="Encoding" value="UTF-8"/>
        <!-- 配置每日一个日志 -->
        <param name="MaxFileSize" value="512M"/>
        <param name="MaxBackupIndex" value="10"/>
        <param name="File" value="/xiafei/Logs/tools/tools.log"/> <!-- 日志路径，根据实际情况修改 -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d %t %-5p [%c{1}:%L] %m%n"/>
        </layout>
    </appender>

    <!--没有包含在指定appender之内的日志-->
    <appender name="OTHER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="Encoding" value="UTF-8"/>
        <!-- 配置每日一个日志 -->
        <param name="MaxFileSize" value="512M"/>
        <param name="MaxBackupIndex" value="5"/>
        <param name="File" value="/xiafei/Logs/tools/tools-other.log"/> <!-- 日志路径，根据实际情况修改 -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d %t %-5p [%c{1}:%L] %m%n"/>
        </layout>
    </appender>

    <category name="java.sql" additivity="true">
        <priority value="INFO"/>
        <appender-ref ref="CONSOLE"/>
    </category>


    <category name="com.xiafei.tools" additivity="false">
        <priority value="INFO"/>
        <!--<appender-ref ref="BIZ"/>-->
        <appender-ref ref="CONSOLE"/>
    </category>

    <root>
        <priority value="INFO"/>      <!-- 根据实际情况修改日志级别，一般线上是INFO以上 -->
        <appender-ref ref="OTHER"/>
    </root>
</log4j:configuration>